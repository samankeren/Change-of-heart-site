---
layout: layouts/base.njk
pagination:
  data: collections.posts
  size: 20
  alias: posts
---
<h1>Latest writing</h1>
<div class="grid" style="display:grid;gap:1rem;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));margin-top:1rem">
  {% for post in posts %}
    <article class="card">
      <h3 style="margin:.2rem 0"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      {% if post.data.summary %}<p style="opacity:.85">{{ post.data.summary }}</p>{% endif %}
      <small>{{ post.date | prettyDate }}</small>
    </article>
  {% endfor %}
</div>
