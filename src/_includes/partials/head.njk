<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ title or "Change of Heart — Hilla Gohary" }}</title>
<meta name="description" content="{{ description or 'Official site of Hilla Gohary — author of Change of Heart.' }}">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=Playfair+Display:wght@400;600;800&display=swap" rel="stylesheet">
<style>
  :root{ --bg: {{ theme.bg }}; --text: {{ theme.text }}; --muted: {{ theme.muted }}; --brand: {{ theme.brand }}; --accent: {{ theme.accent }}; --border:#E5E7EB }
  html,body{margin:0;padding:0;background:var(--bg);color:var(--text);font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;line-height:1.6}
  a{color:var(--brand)}
  .container{width:min(1100px,92vw);margin-inline:auto}
  header.site{position:sticky;top:0;z-index:40;backdrop-filter:saturate(150%) blur(8px);background:rgba(255,255,255,.85);border-bottom:1px solid rgba(0,0,0,.06)}
  nav.wrap{display:flex;align-items:center;justify-content:space-between;padding:.8rem 0}
  nav ul{display:flex;gap:1rem;list-style:none;margin:0;padding:0}
  .btn{display:inline-flex;gap:.5rem;padding:.8rem 1.1rem;border-radius:999px;background:linear-gradient(135deg,var(--brand),var(--accent));color:#fff;font-weight:700;border:none}
  .card{background:#fff;border:1px solid rgba(0,0,0,.08);border-radius:18px;padding:1.2rem;box-shadow:0 2px 6px rgba(0,0,0,.04)}
</style>
